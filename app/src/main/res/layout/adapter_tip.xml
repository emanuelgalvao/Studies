<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient">

    <ImageView
        android:id="@+id/image_tip"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/tip_home"/>

    <TextView
        android:id="@+id/text_tip_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_tip"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:alpha="0.8"
        android:text="Teste"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text_tip_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_tip_title"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:alpha="0.6"
        android:text="Teste"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>